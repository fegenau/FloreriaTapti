---
interface Props {
  items: Array<{
    title: string;
    description: string;
    image?: string;
    icon?: string;
    action?: {
      text: string;
      url: string;
    };
  }>;
  columns?: number;
}

const { items, columns = 3 } = Astro.props;

const gridClasses: Record<number, string> = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
};
---

<div class={`grid gap-6 ${gridClasses[columns]} max-w-5xl`}>
  {items.map((item) => (
    <div class="group relative bg-tapti-deep/30 backdrop-blur-md rounded-xl p-6 border border-tapti-gold/20 hover:border-tapti-gold/40 transition-all duration-300 hover:scale-105 max-w-md mx-auto">
      
      {/* Imagen de fondo si existe */}
      {item.image && (
        <div class="absolute inset-0 rounded-xl overflow-hidden">
          <img 
            src={item.image} 
            alt={item.title}
            class="w-full h-full object-cover opacity-20 group-hover:opacity-30 transition-opacity duration-300"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-tapti-deep via-tapti-deep/70 to-transparent pointer-events-none"></div>
        </div>
      )}

      <div class="relative z-10">
        {/* Icono */}
        {item.icon && (
          <div class="mb-4">
            <span class="text-4xl">{item.icon}</span>
          </div>
        )}

        {/* Título */}
        <h3 class="font-serif text-xl text-tapti-gold mb-3 group-hover:text-yellow-300 transition-colors">
          {item.title}
        </h3>

        {/* Descripción */}
        <p class="text-tapti-ivory/80 text-sm leading-relaxed mb-4 max-w-sm">
          {item.description}
        </p>

        {/* Acción */}
        {item.action && (
          <a 
            href={item.action.url}
            class="inline-flex items-center text-tapti-gold hover:text-yellow-300 text-sm font-medium transition-colors group/link relative z-20"
          >
            {item.action.text}
            <svg class="ml-1 w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        )}
      </div>

      {/* Efecto de brillo al hover */}
      <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-transparent via-tapti-gold/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
    </div>
  ))}
</div>