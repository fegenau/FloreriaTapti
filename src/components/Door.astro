---
interface Props {
  side: 'left' | 'right';
  id: string;
}

const { side, id } = Astro.props;
const isLeft = side === 'left';
---

<div
  id={id}
  class={`w-1/2 h-full bg-gradient-to-b from-amber-800 via-amber-700 to-amber-900 transform transition-transform duration-2000 ease-out relative`}
>
  <!-- Marco de la puerta -->
  <div class="absolute inset-2 border-4 border-amber-700 bg-gradient-to-b from-amber-700 to-amber-800">
    <!-- Panel superior decorativo -->
    <div class="absolute top-4 left-4 right-4 h-16 bg-gradient-to-b from-amber-600 to-amber-700 border border-amber-600 flex items-center justify-center">
      <div class="text-amber-200 text-xs font-serif tracking-widest opacity-95">
        {isLeft ? 'BOUTIQUE' : 'FLORER칈A'}
      </div>
    </div>

    <!-- Ventana de vidrio esmerilado -->
    <div class="absolute top-24 left-4 right-4 bottom-32 bg-gradient-to-b from-amber-200/15 via-amber-100/10 to-amber-200/15 border-2 border-amber-700 backdrop-blur-sm">
