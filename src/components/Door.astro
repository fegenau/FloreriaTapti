---
interface Props {
  side: 'left' | 'right';
  id: string;
}

const { side, id } = Astro.props;
const isLeft = side === 'left';
---

<div
  id={id}
  class={`w-1/2 h-full bg-gradient-to-${isLeft ? 'br' : 'bl'} from-amber-900 via-amber-800 to-amber-900 transform transition-transform duration-2000 ease-out relative`}
>
  <!-- Marco de la puerta -->
  <div class={`absolute inset-2 border-4 border-amber-700 bg-gradient-to-${isLeft ? 'br' : 'bl'} from-amber-800 to-amber-900`}>
    <!-- Panel superior decorativo -->
    <div class={`absolute top-4 left-4 right-4 h-16 bg-gradient-to-${isLeft ? 'r' : 'l'} from-amber-700 to-amber-600 border border-amber-600 flex items-center justify-center`}>
      <div class="text-tapti-gold text-xs font-serif tracking-widest opacity-60">
        {isLeft ? 'BOUTIQUE' : 'FLORERÃA'}
      </div>
    </div>

    <!-- Ventana de vidrio esmerilado -->
    <div class="absolute top-24 left-4 right-4 bottom-32 bg-gradient-to-b from-blue-100/20 via-blue-50/10 to-blue-100/20 border-2 border-amber-600 backdrop-blur-sm">
      <div class="absolute inset-2 border border-amber-500/30">
        <!-- Divisiones de la ventana -->
        <div class="absolute inset-0">
          <div class="absolute top-1/3 left-0 right-0 h-px bg-amber-500/40"></div>
          <div class="absolute top-2/3 left-0 right-0 h-px bg-amber-500/40"></div>
          <div class="absolute top-0 bottom-0 left-1/2 w-px bg-amber-500/40"></div>
        </div>
        <!-- Efecto de vidrio esmerilado con flores -->
        <div class="absolute inset-0 bg-white/5 backdrop-blur-sm">
          {isLeft ? (
            <>
              <div class="absolute top-4 left-4 text-tapti-gold/30 text-lg">ğŸŒ¸</div>
              <div class="absolute bottom-6 right-6 text-tapti-gold/20 text-sm">ğŸŒ¹</div>
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-tapti-gold/25 text-xl">ğŸŒº</div>
            </>
          ) : (
            <>
              <div class="absolute top-6 right-4 text-tapti-gold/30 text-lg">ğŸŒ¿</div>
              <div class="absolute bottom-4 left-4 text-tapti-gold/20 text-sm">ğŸŒ·</div>
              <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-tapti-gold/25 text-xl">ğŸŒ¼</div>
            </>
          )}
        </div>
      </div>
    </div>

    <!-- Panel inferior decorativo -->
    <div class={`absolute bottom-4 left-4 right-4 h-24 bg-gradient-to-${isLeft ? 'r' : 'l'} from-amber-800 to-amber-700 border border-amber-600`}>
      <div class={`absolute inset-2 bg-gradient-to-${isLeft ? 'br' : 'bl'} from-amber-700 to-amber-800 flex items-center justify-center`}>
        <div class="text-tapti-gold/40 text-xs font-serif">
          {isLeft ? 'EST. 2024' : 'TAPTI'}
        </div>
      </div>
    </div>
  </div>

  <!-- Manija dorada elegante -->
  <div class={`absolute ${isLeft ? 'right-8' : 'left-8'} top-1/2 -translate-y-1/2 flex flex-col items-center`}>
    <div class={`w-6 h-6 bg-gradient-to-${isLeft ? 'br' : 'bl'} from-yellow-300 via-tapti-gold to-yellow-600 rounded-full shadow-lg border-2 border-yellow-200`}></div>
    <div class="w-4 h-12 bg-gradient-to-b from-tapti-gold to-yellow-600 rounded-full shadow-lg mt-1 border border-yellow-300"></div>
    <div class={`w-6 h-6 bg-gradient-to-${isLeft ? 'br' : 'bl'} from-yellow-300 via-tapti-gold to-yellow-600 rounded-full shadow-lg border-2 border-yellow-200 mt-1`}></div>
  </div>

  <!-- Bisagras -->
  <div class={`absolute ${isLeft ? 'left-1' : 'right-1'} top-16 w-3 h-8 bg-gradient-to-${isLeft ? 'r' : 'l'} from-amber-600 to-amber-500 rounded-sm shadow-md`}></div>
  <div class={`absolute ${isLeft ? 'left-1' : 'right-1'} bottom-16 w-3 h-8 bg-gradient-to-${isLeft ? 'r' : 'l'} from-amber-600 to-amber-500 rounded-sm shadow-md`}></div>
</div>