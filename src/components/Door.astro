        <!-- Divisiones de la ventana -->
        <div class="absolute inset-0">
          <div class="absolute top-1/3 left-0 right-0 h-px bg-amber-600/50"></div>
          <div class="absolute top-2/3 left-0 right-0 h-px bg-amber-600/50"></div>
          <div class="absolute top-0 bottom-0 left-1/2 w-px bg-amber-600/50"></div>
        </div>
        <!-- Efecto de vidrio esmerilado b치sico -->
        <div class="absolute inset-0 bg-white/5 backdrop-blur-sm"></div>
      </div>
    </div>

    <!-- Panel inferior decorativo -->
    <div class="absolute bottom-4 left-4 right-4 h-24 bg-gradient-to-b from-amber-700 to-amber-800 border border-amber-700">
      <div class="absolute inset-2 bg-gradient-to-b from-amber-600 to-amber-700 flex items-center justify-center">
        <div class="text-amber-200/80 text-xs font-serif">
          {isLeft ? 'EST. 2024' : 'TAPTI'}
        </div>
      </div>
    </div>
  </div>

  <!-- Manija dorada elegante -->
  <div class={`absolute ${isLeft ? 'right-8' : 'left-8'} top-1/2 -translate-y-1/2 flex flex-col items-center`}>
