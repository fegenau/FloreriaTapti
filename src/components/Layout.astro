---
import EntranceAnimation from "./EntranceAnimation.astro";
import FloatingNav from "./FloatingNav.astro";

interface Props {
  title?: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
  showEntrance?: boolean;
}

const {
  title = "Tapti Flores y Regalos",
  hideHeader = false,
  hideFooter = false,
  showEntrance = false,
} = Astro.props;
---

<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body
    class={`min-h-screen bg-white text-gray-900 ${showEntrance ? "overflow-hidden" : "overflow-visible"}`}
  >
    {showEntrance && <EntranceAnimation />}

    <div
      id="main-content"
      class={showEntrance
        ? "opacity-0 transition-opacity duration-1000"
        : "opacity-100"}
    >
      <FloatingNav />
      <main class={hideHeader ? "min-h-screen" : "min-h-[70vh]"}>
        <slot />
      </main>
      {
        !hideFooter && (
          <footer class="border-t border-white/10">
            <div class="max-w-6xl mx-auto px-4 py-8 text-sm flex items-center justify-between">
              <p>Â© {new Date().getFullYear()} Tapti Flores y Regalos</p>
              <a href="https://wa.me/56900000000" class="hover:text-tapti-gold">
                WhatsApp
              </a>
            </div>
          </footer>
        )
      }
    </div>

    <style>
      <style > @keyframes gentle-fade {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      #main-content {
        animation: gentle-fade 1s ease-out forwards;
      }
    </style>
  </body>
</html>
