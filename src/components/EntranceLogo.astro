---
interface Props {
  showClickIndicator?: boolean;
}

const { showClickIndicator = true } = Astro.props;
---

<div
  id="logo-reveal"
  class="absolute inset-0 flex items-center justify-center opacity-100 transition-opacity duration-1000 z-50"
>
  <div class="text-center bg-black/40 backdrop-blur-md rounded-lg px-12 py-8 border border-tapti-gold/30 shadow-2xl">
    <!-- Logo Imagen -->
    <div class="mb-6">
      <img 
        src="/images/logo-tapti.png" 
        alt="Tapti Flores y Regalos" 
        class="w-64 md:w-80 h-auto object-contain drop-shadow-2xl filter brightness-110"
      />
    </div>
    
    <!-- Indicador de click más elegante -->
    {showClickIndicator && (
      <div class="mt-6">
        <p class="text-sm text-tapti-ivory/90 animate-pulse font-light tracking-wide">
          Haz click para entrar
        </p>
        <div class="flex justify-center mt-3">
          <div class="w-8 h-8 border-2 border-tapti-gold/50 rounded-full flex items-center justify-center animate-pulse">
            <span class="text-tapti-gold text-lg">↗</span>
          </div>
        </div>
      </div>
    )}
  </div>
</div>