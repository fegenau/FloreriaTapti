---
import Layout from "../components/Layout.astro";
import BoutiqueCard from "../components/BoutiqueCard.astro";
---

<Layout title="Contacto — Tapti">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <BoutiqueCard
      variant="services"
      size="large"
      className="!h-auto min-h-[70vh] p-8"
    >
      <div class="space-y-4">
        <h1 class="font-serif text-3xl text-tapti-gold">Contacto</h1>
        <p class="text-white/80">
          Escríbenos por WhatsApp para pedidos personalizados.
        </p>
        <a
          class="inline-block px-6 py-3 rounded-full bg-tapti-gold text-tapti-deep font-medium"
          href="https://wa.me/56900000000"
          target="_blank">Abrir WhatsApp</a
        >
      </div>
    </BoutiqueCard>
  </div>
</Layout>
