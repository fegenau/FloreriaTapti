---
import Layout from "../components/Layout.astro";
import BoutiqueCard from "../components/BoutiqueCard.astro";
---

<Layout title="Sobre Tapti">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <BoutiqueCard
      variant="services"
      size="large"
      className="!h-auto min-h-[70vh] p-8"
    >
      <div class="space-y-4">
        <h1 class="font-serif text-3xl text-tapti-gold">Sobre Tapti</h1>
        <p class="text-white/80">
          Florería moderna, regalos personalizados auténticos y elegantes. Aquí
          va el texto de marca de 100–150 palabras.
        </p>
      </div>
    </BoutiqueCard>
  </div>
</Layout>
